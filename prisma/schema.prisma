generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id  Int  @id @default(autoincrement())
  username   String   @db.VarChar(20)
  email   String   @unique  
  password  String 
  folders Folders[]
  files Files[] 
}

model Folders {
  id Int @id @default(autoincrement())
  name String @db.VarChar(20)
  created_at DateTime @default(now())
  owner Users @relation(fields: [userId], references: [id])
  userId Int
  files Files[]
  parentId Int?
  parent Folders? @relation("NestedFolders",fields: [parentId], references: [id])
  nestedFolders Folders[] @relation("NestedFolders")
  type Type @default(Child)
  @@unique([name, userId, parentId])
}

model Files {
    id  Int  @id @default(autoincrement())
    name String 
    type String
    size Int
    created_at DateTime @default(now())
    dl_link String
    parent Folders? @relation(fields: [folderId], references: [id], onDelete: Cascade)
    folderId Int?
    owner Users @relation(fields: [userId], references: [id])
    userId Int
    @@unique([name, userId, folderId])
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   
  expiresAt   DateTime
}

enum Type {
  Root
  Child
}